import java.util.ArrayList;
import java.util.Arrays;
import java.util.Comparator;
import java.util.List;

import Point.PointComparator;

public class CircularSuffixArray {

	private int length = 0;
	private String[] resultList;
	private String createRotation(int offset, String string)
	{
		StringBuilder sb = new StringBuilder();
		Character start = string.charAt(0);
		String sub = string.substring(1,string.length());
		sb.append(sub);
		sb.append(start);
		return sb.toString();
		
	}
	
    private class StringComparator implements Comparator<String> {
        @Override
        public int compare(Point point1, Point point2) {
        	return 0;
        }
    }
    // circular suffix array of s
    public CircularSuffixArray(String s)
    {
    	length = s.length();
    	resultList = new String[length];
    	resultList[0]=s;
    	for(int i=0;i<length-1;i++)
    	{
    		s = createRotation(1,s);
    		resultList[i+1]=s;
    	}
    	Arrays.sort(resultList,currentPoint.slopeOrder());
    }

    // length of s
    public int length()
    {
    	return length;
    }

    // returns index of ith sorted suffix
    public int index(int i)
    {
    	return 0;
    }

    // unit testing (required)
    public static void main(String[] args)
    {
    	CircularSuffixArray circularSuffixArray = new CircularSuffixArray("ABRACADABRA!");
    	for(String string : circularSuffixArray.resultList)
    	{
    		System.out.println(string);
    	}
    }

}