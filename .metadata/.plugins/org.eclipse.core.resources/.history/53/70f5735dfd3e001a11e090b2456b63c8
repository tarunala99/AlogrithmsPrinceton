import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;
import edu.princeton.cs.algs4.StdRandom;

public class Board {

	private int[][] board;
	private int size;
    // create a board from an n-by-n array of tiles,
    // where tiles[row][col] = tile at (row, col)
    public Board(int[][] tiles)
    {
    	size = tiles.length;
    	board = tiles;
    }
                                           
    // string representation of this board
    public String toString()
    {
    	StringBuilder string = new StringBuilder();
    	string.append(size+"\n");
    	for(int i=1;i<=size;i++)
    	{
    		for(int j=1;j<=size;j++)
    		{
    			string.append(" "+board[i-1][j-1]);
    		}
    		string.append("\n");
    	}
    	String resultString = string.toString();
    	//removing the trailing new line character
    	return resultString.substring(0,resultString.length()-1);
    }

    // board dimension n
    public int dimension()
    {
    	return size;
    }
    
    private int index(int row,int col)
    {
    	return (col-1)+size*(row-1);
    }
    
    private int rowNo(int index)
    {
    	//System.out.println("The current row is "+index/size);
    	return index/size+1;
    }
    private int columnNo(int index)
    {
    	//System.out.println("The current column is "+index%size);
    	return index%size+1;
    }
    
 // number of tiles out of place
    public int hamming()
    {
    	int count = 0;
    	for(int i=1;i<=size;i++)
    	{
    		for(int j=1;j<=size;j++)
    		{
    			if(board[i-1][j-1]!=0 && board[i-1][j-1]!=singleRow(i,j))
	    		{
	    			count++;
	    		}
    		}
    	}
    	return count;
    }
    // sum of Manhattan distances between tiles and goal
    public int manhattan()
    {
    	int count = 0;
    	for(int i=1;i<=size;i++)
    	{
    		for(int j=1;j<=size;j++)
    		{
    			int currentNo = board[i-1][j-1];
    			if(currentNo!=0)
    			{
    				count = count + Math.abs(rowNo(currentNo)-(i));
    				count = count + Math.abs(columnNo(currentNo)-(j));
    				//System.out.println("The current count is "+count+" and the number is "+currentNo);
    			}
    		}
    	}
    	return count;
    	
    }
    // is this board the goal board?
    public boolean isGoal()
    {
    	if(hamming()==0)
    	{
    		return true;
    	}
    	return false;
    }

    // does this board equal y?
    public boolean equals(Object y)
    {
    	int[][] tempObj =(int[][]) y;
    	if(tempObj.length==size)
    	{
    		int count = 0;
    		for(int i=0;i<size;i++)
    		{
    			for(int j=0;j<size;j++)
    			{
    				count=count+Math.abs((tempObj[i][j]-board[i][j]));
    			}
    			if(count>0)
    			{
    				return false;
    			}
    		}
    	}
    	else {
    		return false;
    	}
    	return true;
    }

    private int findZero()
    {
    	for(int i=0;i<size;i++)
		{
			for(int j=0;j<size;j++)
			{
				if(board[i][j]==0)
				{
					return (j+1)+i*(size);
				}
			}
		}
    	//throw exception here
    	return Integer.MAX_VALUE;
    }
    private boolean checkValid(int index)
    {
    	if(index>=1 && index<=size*size)
    	{
    		return true;
    	}
    	return false;
    }
    
    private int[][] createArray()
    {
    	int [][] resultBoard = new int[board.length][];
    	for(int i = 0; i < board.length; i++)
    	{
    	  int[] aMatrix = board[i];
    	  int   aLength = aMatrix.length;
    	  resultBoard[i] = new int[aLength];
    	  System.arraycopy(aMatrix, 0, resultBoard[i], 0, aLength);
    	}
    	return resultBoard;
    }
    
    public Iterable<Board> neighbors() {
    	return new BoardIterable();
    }
    
    private class BoardIterable implements Iterable<Board> { 
        
        // code for data structure 
        public Iterator<Board> iterator() { 
            return new BoardIterator(); 
        } 
    } 
    
    private class BoardIterator implements Iterator<Board>
    {
    	private int count = 0;
    	private List<Board> resultList;
    	BoardIterator()
    	{
    		resultList = new ArrayList<>();
    		int index = findZero();
    		int rowNo = rowNo(index);
    		int colNo = columnNo(index);
	    	int[] indexArray = {index-1,index+1,index-size,index+size};
	    	for(Integer i: indexArray)
	    	{
	    		if(checkValid(i))
	    		{
	    			//create a new array and make it iterable
	    			int [][] cloneArray = createArray();
	    			cloneArray[rowNo(index)-1][columnNo(index)-1] = cloneArray[rowNo(i)-1][columnNo(i)-1];
	    			cloneArray[rowNo(i)-1][columnNo(i)-1]=0;	
	    			resultList.add(new Board(cloneArray));
	    		}
	    	}
    	}
	    public boolean hasNext() {
	    	if(count<resultList.size())
    			return true;
    		else
    			return false;
    	}
    	public void remove() {
    		throw new UnsupportedOperationException();
    	}
    	public Board next() {
    		Board tempBoard = resultList.get(count);
    		count++;
    		return tempBoard;
    	}	
    }
    
    // a board that is obtained by exchanging any pair of tiles
    public Board twin()
    {
    	int[][] twinBoard = createArray();
    	int index = StdRandom.uniform(0,9);
    	int row = rowNo(index+1);
    	int column = columnNo(index+1);
    	int value = twinBoard[row][column];
    	//find the first tile
    	while(value==0)
    	{
    		index = StdRandom.uniform(0,9);
        	row = rowNo(index+1);
        	column = columnNo(index+1);
        	value = twinBoard[row][column];
    	}
    	//find the second tile
    	int direction = StdRandom.uniform(0,4);
    	int row1 = row;
    	int column1 = column;
    	switch(direction)
    	{
    	case 1 : row1= row1+1;
    			 if(row1>=size)
    				 row1=0;
    			 break;
    	case 2 : row1= row1-1;
    			 if(row1<=0)
    				 row1=size-1;
    			 break;
    	case 3 : column1= column1+1;
    			if(column1>=size)
    				column1=0;
    			 break;
    	case 4 : column1= column1-1;
    			 if(column1<=0)
    				 column1=size-1;
    			 break;
    	default : break;
    	}
    	int tempValue = board[row][column];
    	twinBoard[row][column]=twinBoard[row1][column1];
    	twinBoard[row1][column1]=tempValue;
    	return new Board(twinBoard);
    }

    // unit testing (not graded)
    public static void main(String[] args)
    {
    	int[][] temp = {{1,4,8},{2,6,0},{7,3,5}};
    	int[][] temp1 = {{0,1,3},{4,2,5},{7,8,6}};
    	Board board = new Board(temp);
		/*
		 * System.out.println(board.equals(temp1)+"he length is "+temp1.length);
		 * System.out.println(board.toString());
		 * System.out.println("The hamming distance is "+board.hamming()
		 * +" and the manhattan distance is "+board.manhattan());
		 */
		
		Iterator<Board> test = board.neighbors().iterator(); while(test.hasNext()) {
		System.out.println(test.next().toString()); }
		 
    	Board twin = board.twin();
    	System.out.println(twin.toString());
    }

}
